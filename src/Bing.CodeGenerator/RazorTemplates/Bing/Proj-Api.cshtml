@model BuildContext
@{
    var project = Model.Project;
}
<Project Sdk="Microsoft.NET.Sdk.Web">
    <Import Project="..\..\common.props" />
    <PropertyGroup>
        <ServerGarbageCollection>false</ServerGarbageCollection>
        <!--- ServerGarbageCollection ： 服务器垃圾收集 ：不会让内存无限增长 -->
        <ConcurrentGarbageCollection>true</ConcurrentGarbageCollection>
        <!--- ConcurrentGarbageCollection ： 并发垃圾收集 ：不会让内存无限增长 -->
        <AspNetCoreHostingModel>InProcess</AspNetCoreHostingModel>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <LangVersion>7.3</LangVersion>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="AspectCore.Extensions.Hosting" Version="2.2.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\@(project.Module).Service\@(project.Module).Service.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <Content Update="nlog.config">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>
</Project>